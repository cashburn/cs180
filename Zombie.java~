import java.util.ArrayList;
public class Zombie {
    private String name;
    private int serial;
    private static int count = 0;
    
    private static ArrayList<Zombie> list = new ArrayList<Zombie>();
    
    public Zombie(String name) {
        list.add(this);
        this.name = name;
        serial = count;
        count++;
    }
    
    private static int getCount() {
        return list.size();
    }
    
    public static Zombie getZombie(int i) {
        return list.get(i);
    }
    
    public static void printStatus() {
        System.out.println("Zombies created so far: " + getCount());
    }
    
    public void printZombie() {
        System.out.println(name + " is zombie " + serial);
    }
}